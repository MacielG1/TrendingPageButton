{
  "manifest_version": 3,
  "name": "GitHub Trending Button",
  "version": "1.1",
  "description": "Adds a button with a link to the GitHub Trending page",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "github-trending@macielg1.com",
      "strict_min_version": "109.0"
    }
  }
}
